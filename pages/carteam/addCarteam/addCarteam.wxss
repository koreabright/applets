.item {
  height: 110rpx;
  line-height: 110rpx;
  font-size: 32rpx;
  margin: 0 20rpx;
  border-bottom: 1rpx solid #EBEBEB;
}
.btn-area {
  display: inline-block;
}
.title {
  width: 130rpx;
  display: inline-block;
  margin-right: 65rpx;
  font-size: 32rpx;
  color: #333;
}
input {
  vertical-align: middle;
  width: 470rpx;
  height: 35rpx;
  display: inline-block;
}
.placeholder {
  font-size: 28rpx;
  color: #999;
}
button.radio {
  display: inline-block;
  vertical-align: middle;
  padding: 0;
  width: 125rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #999;
  border: 1rpx solid #c6c6c6;
  margin-right: 32rpx;
}
button.selected {
  color: #527AFF;
  border:  1rpx solid #527AFF;
}
.create-btn {
  border: 0;
  background: #527AFF;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  width: 100%;
  bottom: 0;
  border-radius: 0;
  font-size: 32rpx;
}